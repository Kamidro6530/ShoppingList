<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/background"    >
    <TextView
        android:id="@+id/registration_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="18dp"
        android:text="Register"
        android:textColor="@color/dark_blue"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/registration_emailTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/registration_Title"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:text="E-mail"
        android:textColor="@color/dark_blue"
        android:textSize="28dp" />

    <EditText
        android:id="@+id/registration_emailET"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/registration_emailTV"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:autofillHints=""
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/registration_passwordTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/registration_emailET"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:text="Password"
        android:textColor="@color/dark_blue"
        android:textSize="28dp" />

    <EditText
        android:id="@+id/registration_passwordET"
        android:layout_width="150dp"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:layout_below="@id/registration_passwordTV"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/registration_passwordTV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/registration_passwordET"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:text="Password"
        android:textColor="@color/dark_blue"
        android:textSize="28dp" />

    <EditText
        android:id="@+id/registration_passwordET2"
        android:layout_width="150dp"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:layout_below="@id/registration_passwordTV2"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/registration_enter"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/registration_passwordET2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_1"
        android:text="Register"
        android:textColor="@color/dark_blue"
        android:textSize="23dp"
        android:textStyle="bold" />


</RelativeLayout>